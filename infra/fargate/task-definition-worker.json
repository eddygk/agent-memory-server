{
  "family": "redis-memory-server-worker",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "redis-memory-server-worker",
      "image": "YOUR_ECR_REPOSITORY_URI:latest",
      "command": [
        "uv",
        "run",
        "agent-memory",
        "task-worker",
        "--concurrency",
        "10"
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/redis-memory-server-worker",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "LONG_TERM_MEMORY",
          "value": "True"
        },
        {
          "name": "WINDOW_SIZE",
          "value": "20"
        },
        {
          "name": "GENERATION_MODEL",
          "value": "gpt-4o-mini"
        },
        {
          "name": "EMBEDDING_MODEL",
          "value": "text-embedding-3-small"
        },
        {
          "name": "ENABLE_TOPIC_EXTRACTION",
          "value": "True"
        },
        {
          "name": "ENABLE_NER",
          "value": "True"
        }
      ],
      "secrets": [
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:redis-memory-server/redis-url"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:redis-memory-server/openai-api-key"
        },
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:redis-memory-server/anthropic-api-key"
        }
      ]
    }
  ]
}
